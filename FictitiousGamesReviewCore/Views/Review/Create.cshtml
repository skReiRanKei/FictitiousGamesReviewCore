@model FictitiousGamesReviewCore.Models.Review
@{
    ViewBag.Title = "レビューを投稿";
}

<h2>レビューを投稿する</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId" />

    <div class="form-group">
        <label asp-for="ReviewerName" class="control-label col-md-2">名前</label>
        <div class="col-md-10">
            <input asp-for="ReviewerName" class="form-control" />
            <span asp-validation-for="ReviewerName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="control-label col-md-2">評価</label>
        <div class="col-md-10">
            <select asp-for="Rating" class="form-control">
                <option value="">選択してください</option>
                @for (int i = 5; i >= 1; i--)
                {
                    <option value="@i">@i</option>
                }
            </select>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Comment" class="control-label col-md-2">コメント</label>
        <div class="col-md-10">
            <textarea asp-for="Comment" class="form-control"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="投稿する" class="btn btn-primary" />
            <a asp-controller="Products" asp-action="Details" asp-route-id="@ViewBag.ProductId" class="btn btn-default">キャンセル</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}