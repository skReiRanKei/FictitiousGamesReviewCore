@model FictitiousGamesReviewCore.Models.Product

@{
    ViewBag.Title = "商品登録";
}

<h2>商品を登録する</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="Name" class="control-label col-md-2">商品名</label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label col-md-2">説明</label>
        <div class="col-md-10">
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label col-md-2">価格</label>
        <div class="col-md-10">
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label col-md-2">画像URL</label>
        <div class="col-md-10">
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="AverageRating" class="control-label col-md-2">平均評価</label>
        <div class="col-md-10">
            <input asp-for="AverageRating" class="form-control" />
            <span asp-validation-for="AverageRating" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="登録する" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-default">キャンセル</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}